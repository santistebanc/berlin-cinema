{
  "watch": ["api/", "server.js", "package.json"],
  "ext": "js,json",
  "ignore": ["node_modules/", "src/", "dist/", "*.log", "debug-*.html", "example.html", "response.html"],
  "exec": "node server.js",
  "env": {
    "NODE_ENV": "development"
  },
  "delay": "500",
  "verbose": true,
  "restartable": "rs",
  "colours": true
}
