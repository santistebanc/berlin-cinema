{
  "name": "berlin-cinema",
  "version": "1.0.0",
  "description": "Berlin Cinema OV Movies - API and Frontend",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:frontend\"",
    "dev:api": "cd berlin-cinema-api && npm run dev",
    "dev:frontend": "cd berlin-cinema-app && npm run dev",
    "build": "npm run build:api && npm run build:frontend",
    "build:api": "cd berlin-cinema-api && npm run build",
    "build:frontend": "cd berlin-cinema-app && npm run build",
    "start": "concurrently \"npm run start:api\" \"npm run start:frontend\"",
    "start:api": "cd berlin-cinema-api && npm start",
    "start:frontend": "cd berlin-cinema-app && npm run preview",
    "install:all": "npm install && cd berlin-cinema-api && npm install && cd ../berlin-cinema-app && npm install",
    "clean": "cd berlin-cinema-api && rm -rf dist && cd ../berlin-cinema-app && rm -rf dist",
    "test": "echo \"No tests configured yet\"",
    "lint": "echo \"No linting configured yet\""
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "cinema",
    "berlin",
    "movies",
    "ov",
    "api",
    "react",
    "typescript"
  ],
  "author": "Your Name",
  "license": "MIT",
  "workspaces": [
    "berlin-cinema-api",
    "berlin-cinema-app"
  ]
}
